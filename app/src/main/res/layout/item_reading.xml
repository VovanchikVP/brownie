<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imageViewReadingType"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_reading"
            android:tint="@color/primary_blue" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewReadingValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1250.5"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewMeterInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EL-001-2024 (Электричество)"
                android:textColor="@color/primary_blue"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textViewReadingDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01.01.2024 12:30"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/buttonDeleteReading"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_delete"
            android:tint="@color/text_secondary"
            android:contentDescription="Удалить показание" />

    </LinearLayout>

</androidx.cardview.widget.CardView>