<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@drawable/background_no_meters">

    <!-- Иконка -->
    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_meter"
        app:tint="@color/primary_blue"
        android:layout_marginBottom="16dp" />

    <!-- Заголовок -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Нет приборов учета"
        android:textColor="@color/text_primary"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- Описание -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Откройте меню и перейдите на страницу\nдобавления приборов учета"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:gravity="center"
        android:lineSpacingExtra="2dp" />

    <!-- Кнопка меню -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonOpenMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Добавить"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/primary_blue"
        app:icon="@drawable/ic_menu"
        app:iconGravity="textStart"
        android:minWidth="120dp" />

</LinearLayout>